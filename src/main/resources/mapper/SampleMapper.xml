<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.template.mapper.SampleMapper">

    <select id="findAll" resultType="map">
        SELECT * FROM sample
    </select>

    <select id="findById" parameterType="long" resultType="map">
        SELECT * FROM sample WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="map">
        INSERT INTO sample (email, password, name, role)
        VALUES (#{email}, #{password}, #{name}, #{role})
    </insert>

    <update id="update" parameterType="map">
        UPDATE sample
        SET email = #{email},
            password = #{password},
            name = #{name},
            role = #{role},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM sample WHERE id = #{id}
    </delete>

</mapper>
